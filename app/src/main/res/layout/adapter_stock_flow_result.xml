<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/orderType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_half_margin"
        android:background="@color/white"
        android:gravity="right"
        android:paddingBottom="@dimen/common_half_margin"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:paddingTop="@dimen/common_half_margin"
        android:text="销售单"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/text_size_16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/subcount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_half_margin"
            android:text="发生数量：-50"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_14sp"/>

        <TextView
            android:id="@+id/addcount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="发生数量：100"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/productcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_half_margin"
            android:text="货号：802"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_14sp"/>

        <TextView
            android:id="@+id/area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="产地：上海"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/billcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_half_margin"
            android:text="单据编号：DFSDXXKDS"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_14sp"/>

        <TextView
            android:id="@+id/standar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="规格：XXL"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_14sp"/>
    </LinearLayout>

    <TextView

        android:id="@+id/operatetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:paddingBottom="@dimen/common_half_margin"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:text="操作时间：2016-01-06 05:55"
        android:textColor="@color/text_light"
        android:textSize="@dimen/text_size_14sp"/>
</LinearLayout>
