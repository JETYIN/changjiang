<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_top"
        style="@style/TitleStyle"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:src="@mipmap/top_back"/>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="8dp"
            android:textColor="#FFFFFF"
           android:text="经营概况"
            android:textSize="@dimen/text_size_18sp"/>

        <ImageView
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/top_search_white"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:background="@mipmap/top_bg"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:paddingBottom="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账户余额"
                    android:textColor="@color/white"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/tv_remind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥100000.00"
                    android:textColor="@color/orange"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/orange"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/layout_top_bottom_1dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_warehouse_amount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="￥222万"
                        android:textColor="@color/text_blue"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="库存总成本"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_receive_amount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="￥22.22万"
                        android:textColor="@color/red"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="应收库户款"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_pay_amount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="￥20万"
                        android:textColor="@color/orange"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="应付供应商款"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_top_bottom_1dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_today_amount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="￥22万"
                        android:textColor="@color/text_blue"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="今日销售"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_today_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_color_blue"
                            android:gravity="center"
                            android:paddingBottom="1dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="1dp"
                            android:text="同期"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_today_profit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="-1231.12"
                            android:textColor="@color/login_green_color"
                            android:textSize="10sp" />

                        <ImageView
                            android:id="@+id/iv_today_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_arrow_down" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_week_amount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="￥122.22万"
                        android:textColor="@color/red"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="近7天"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_week_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_color_orange"
                            android:gravity="center"
                            android:paddingBottom="1dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="1dp"
                            android:text="同期"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_week_profit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="+1231.12"
                            android:textColor="@color/orange"
                            android:textSize="10sp" />

                        <ImageView
                            android:id="@+id/iv_week_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_arrow_up" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_month_amount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="￥220万"
                        android:textColor="@color/orange"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="近30天"
                        android:textColor="@color/text_normal"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_month_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_color_orange"
                            android:gravity="center"
                            android:paddingBottom="1dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="1dp"
                            android:text="同期"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_nomth_profit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="+1231.12"
                            android:textColor="@color/orange"
                            android:textSize="10sp" />

                        <ImageView
                            android:id="@+id/iv_month_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_arrow_up" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_top_bottom_1dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/common_margin">


                <TextView
                    android:id="@+id/tv_today"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_selector_background"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:text="今日"
                    android:textColor="@drawable/text_color_blue_selected"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/tv_yesterday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_selector_background"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:text="昨日"
                    android:textColor="@drawable/text_color_blue_selected"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_week"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_selector_background"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:text="近7日"
                    android:textColor="@drawable/text_color_blue_selected"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_selector_background"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:text="近30日"
                    android:textColor="@drawable/text_color_blue_selected"
                    android:textSize="14dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_normal"
                    android:text="收入："/>

                <TextView
                    android:id="@+id/tv_income"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/tv_1"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/orange"
                    android:text="￥10000.00"/>

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_normal"
                    android:text="支出："/>

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/tv_2"
                    android:layout_below="@+id/tv_income"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/orange"
                    android:text="￥10000.00"/>

                <ImageView
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_arrow"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/light_gray"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_normal"
                    android:text="销售数量："/>

                <TextView
                    android:id="@+id/tv_sale_number"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/tv_3"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_normal"
                    android:text="5000"/>

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_normal"
                    android:text="销售笔数："/>

                <TextView
                    android:id="@+id/tv_sale_frequency"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/tv_4"
                    android:layout_below="@+id/tv_sale_number"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_normal"
                    android:text="19"/>

                <TextView
                    android:id="@+id/tv_5"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_normal"
                    android:text="销售金额："/>

                <TextView
                    android:id="@+id/tv_sale_amount"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/tv_5"
                    android:layout_below="@+id/tv_sale_frequency"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/orange"
                    android:text="￥372834.00"/>

                <TextView
                    android:id="@+id/tv_6"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/tv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_normal"
                    android:text="销售毛利："/>

                <TextView
                    android:id="@+id/tv_sale_margin"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/tv_6"
                    android:layout_below="@+id/tv_sale_amount"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/orange"
                    android:text="￥372834.00"/>

                <ImageView
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_arrow"/>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/light_gray"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_7"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_normal"
                    android:text="采购数量："/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_purchase_number"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/tv_7"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_normal"
                    android:text="5000"/>

                <TextView
                    android:id="@+id/tv_8"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/tv_7"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_normal"
                    android:text="采购笔数："/>

                <TextView
                    android:id="@+id/tv_purchase_frequency"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/tv_8"
                    android:layout_below="@+id/tv_purchase_number"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_normal"
                    android:text="19"/>

                <TextView
                    android:id="@+id/tv_9"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/tv_8"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_normal"
                    android:text="采购金额："/>

                <TextView
                    android:id="@+id/tv_purchase_amount"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/tv_9"
                    android:layout_below="@+id/tv_purchase_frequency"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/orange"
                    android:text="￥372834.00"/>


                <ImageView
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_arrow"/>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/light_gray"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>