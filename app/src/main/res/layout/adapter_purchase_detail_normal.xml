<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/common_margin">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/list_juxing"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:text="正品杭州丝绸布料（187823）"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:text="￥600.00"
            android:textColor="@color/text_red"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="@dimen/common_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="产地："
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="杭州"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="规格："
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/tv_standard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="匹"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/boarder_blue"
            android:text="采购单"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="@dimen/common_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="单价："
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="￥100"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="数量："
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="5"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_12sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="@dimen/common_margin">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="2016-01-17"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_12sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_more"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/list_arrow_down"/>

    <include layout="@layout/layout_listview_purchase_detail_more_normal"/>

</LinearLayout>

