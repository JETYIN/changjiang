<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/layout_commen_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_top"
        android:layout_marginTop="@dimen/common_half_margin"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="过滤无库存"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <ToggleButton
                android:id="@+id/nostock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:button="@drawable/toggle_button_selector"
                android:checked="true"
                android:textOff=""
                android:textOn=""/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="过滤零库存"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <ToggleButton
                android:id="@+id/nonestock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:button="@drawable/toggle_button_selector"
                android:checked="true"
                android:textOff=""
                android:textOn=""/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="合并库存"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <ToggleButton
                android:id="@+id/stockMerge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:button="@drawable/toggle_button_selector"
                android:checked="true"
                android:textOff=""
                android:textOn=""/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/common_half_margin"
            android:background="@mipmap/list_line"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:drawableRight="@mipmap/arrow_down"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_size_14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wholesalse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="采购价："
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_12sp"/>

            <TextView
                android:id="@+id/retail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:text="批发价："
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_12sp"/>


            <TextView
                android:id="@+id/retailTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wholesalse"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:text="零售价："
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/prices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="品牌："
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_12sp"/>

            <TextView
                android:id="@+id/category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:text="分类："
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_size_12sp"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wholesalse"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_12sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/common_half_margin"
            android:background="@mipmap/list_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/common_half_margin"
            android:paddingTop="@dimen/common_half_margin">

            <TextView
                android:id="@+id/totalStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin"
                android:gravity="center_vertical"
                android:text="总库存："
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_15sp"/>

            <TextView
                android:id="@+id/check_flow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/common_half_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_half_margin"
                android:src="@mipmap/arrow_down"
                android:text="查看仓库流水"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_15sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_half_margin"
            android:background="@mipmap/list_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_half_margin"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_half_margin"
                android:src="@mipmap/list_left_tip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_half_margin"
                android:layout_toRightOf="@id/iconTip"
                android:gravity="center_vertical"
                android:text="合并库存列表"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/list_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/list_item_grey_bg"
                android:gravity="center"
                android:text="商品名称"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_15sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/list_item_grey_bg"
                android:gravity="center"
                android:text="规格"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_15sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/list_item_grey_bg"
                android:gravity="center"
                android:text="数量"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@mipmap/list_box"
                android:gravity="center"
                android:text="XXXX商品"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_15sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@mipmap/list_box"
                android:gravity="center"
                android:text="XXL"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_15sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@mipmap/list_box"
                android:gravity="center"
                android:text="1000"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/list_box"
                android:gravity="center"
                android:text="XXXX商品"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_15sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/list_box"
                android:gravity="center"
                android:text="XXL"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_15sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/list_box"
                android:gravity="center"
                android:text="1000"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_15sp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>