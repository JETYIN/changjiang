<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical" >

    <include layout="@layout/title_with_left_button" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="@dimen/activity_spacing"
                android:paddingRight="@dimen/activity_spacing" >

                <Gallery
                    android:id="@+id/gallery"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/commodity_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="秋冬新款"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/commodity_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="高领多色保暖针织毛衣女（123）"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/wholesale_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥18.00"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_18sp" />

                        <TextView
                            android:id="@+id/wholesale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dip"
                            android:text="批发价 "
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/text_size_13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/retail_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥18.00"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_18sp" />

                        <TextView
                            android:id="@+id/retail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dip"
                            android:text="零售价 "
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/text_size_13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/stock_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥18.00"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_18sp" />

                        <TextView
                            android:id="@+id/stock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dip"
                            android:text="总库存"
                            android:textColor="@color/light_gray"
                            android:textSize="@dimen/text_size_13sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:src="@mipmap/commodity_line_1" />

                <tech.boshu.changjiangshidai.view.AutoHeightListView
                    android:id="@+id/format_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:divider="@null"
                    android:headerDividersEnabled="true" >
                </tech.boshu.changjiangshidai.view.AutoHeightListView>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/commodity_line_2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="@mipmap/commodity_line_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:paddingLeft="@dimen/activity_spacing"
                    android:paddingRight="@dimen/activity_spacing" >

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/commodity_list_juxing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@+id/icon"
                        android:text="详细库存"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16sp" />

                    <ImageButton
                        android:id="@+id/down_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:src="@mipmap/commodity_down_arrow" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/commodity_line_2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_marginLeft="@dimen/activity_spacing"
                    android:layout_marginRight="@dimen/activity_spacing" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dip"
                        android:text="合并库存"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16sp" />

                    <CheckBox
                        android:id="@+id/merge_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:button="@drawable/switch_check_box"
                        android:checked="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dip"
                    android:paddingLeft="@dimen/activity_spacing"
                    android:paddingRight="@dimen/activity_spacing" >

                    <include
                        android:id="@+id/stock_no_merge"
                        layout="@layout/stock_no_merge_layout"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/stock_merge"
                        layout="@layout/stock_merge_layout" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>