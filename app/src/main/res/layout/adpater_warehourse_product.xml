<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:minHeight="86dp"
    android:paddingLeft="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="测试"
        android:textColor="@color/text_normal"/>
    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/center_h"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/area_title"
        style="@style/WarehourseProductTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:text="产地:"/>

    <TextView
        android:id="@+id/area"
        style="@style/WarehourseProductTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:text="产地"
        android:layout_toRightOf="@id/area_title"
        android:layout_toLeftOf="@id/center_h"/>

    <TextView
        android:id="@+id/org_num_title"
        style="@style/WarehourseProductTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/area_title"
        android:text="入库前数量:"/>

    <TextView
        android:id="@+id/org_num"
        style="@style/WarehourseProductTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/area_title"
        android:layout_marginLeft="4dp"
        android:text="产地"
        android:layout_toRightOf="@id/org_num_title"
        android:layout_toLeftOf="@id/center_h"/>

    <TextView
        android:id="@+id/size_title"
        style="@style/WarehourseProductTextView"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/center_h"
        android:textColor="@color/text_light"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:text="规格:"/>

    <TextView
        android:id="@+id/size"
        style="@style/WarehourseProductTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:text="产地"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/size_title"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/cur_num_title"
        style="@style/WarehourseProductTextView"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/center_h"
        android:layout_height="wrap_content"
        android:layout_below="@id/size_title"
        android:text="库存数量:"/>

    <TextView
        android:id="@+id/cur_num"
        style="@style/WarehourseProductTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/size_title"
        android:text="产地"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/cur_num_title"
        android:layout_alignParentRight="true"/>
</RelativeLayout>