<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg">

    <include layout="@layout/layout_commen_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_top"
        android:layout_marginTop="@dimen/common_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"
                android:minEms="4"
                android:text="仓库："
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <TextView
                android:id="@+id/chooseStock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="28dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@mipmap/top_input"
                android:drawableRight="@mipmap/list_more"
                android:gravity="left|center_vertical"
                android:hint="选择仓库"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_half_margin"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"
                android:minEms="4"
                android:text="商品："
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <TextView
                android:id="@+id/chooseProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="28dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@mipmap/top_input"
                android:drawableRight="@mipmap/list_more"
                android:gravity="left|center_vertical"
                android:hint="选择商品"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_half_margin"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"
                android:minEms="4"
                android:text="产地："
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <EditText
                android:id="@+id/chooseArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="28dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@mipmap/top_input"
                android:gravity="left|center_vertical"
                android:hint="请输入产地"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_half_margin"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"
                android:minEms="4"
                android:text="规格："
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <EditText
                android:id="@+id/chooseMax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="28dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@mipmap/top_input"
                android:gravity="left|center_vertical"
                android:hint="请输入规格"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_half_margin"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"
                android:minEms="4"
                android:text="*开始日期："
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <TextView
                android:id="@+id/chooseStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="28dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@mipmap/top_input"
                android:drawableRight="@mipmap/list_more"
                android:gravity="left|center_vertical"
                android:hint="选择开始日期"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_half_margin"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"
                android:minEms="4"
                android:text="*结束日期："
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <TextView
                android:id="@+id/chooseEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="28dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@mipmap/top_input"
                android:drawableRight="@mipmap/list_more"
                android:gravity="left|center_vertical"
                android:hint="选择结束日期"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_half_margin"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="@dimen/common_margin"
            android:background="@mipmap/bg_btn"
            android:text="查询流水"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>