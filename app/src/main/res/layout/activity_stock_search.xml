<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_commen_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_top"
        android:layout_marginTop="@dimen/common_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"
                android:minEms="4"
                android:text="仓库："
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <TextView
                android:id="@+id/chooseStock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="28dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@mipmap/top_input"
                android:drawableRight="@mipmap/list_more"
                android:gravity="left|center_vertical"
                android:hint="全部仓库"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_half_margin"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"
                android:minEms="4"
                android:text="分类："
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <TextView
                android:id="@+id/chooseCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="28dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@mipmap/top_input"
                android:drawableRight="@mipmap/list_more"
                android:gravity="left|center_vertical"
                android:hint="全部分类"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_half_margin"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"
                android:minEms="4"
                android:text="品牌："
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <TextView
                android:id="@+id/chooseBrand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="28dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@mipmap/top_input"
                android:drawableRight="@mipmap/list_more"
                android:gravity="left|center_vertical"
                android:hint="全部品牌"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_half_margin"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"
                android:text="最小库存："
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <EditText
                android:id="@+id/chooseMin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="28dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@mipmap/top_input"
                android:gravity="left|center_vertical"
                android:hint="最小数量"
                android:inputType="numberSigned"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_half_margin"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="left"
                android:text="最大库存："
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_14sp"/>

            <EditText
                android:id="@+id/chooseMax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginRight="28dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:background="@mipmap/top_input"
                android:gravity="left|center_vertical"
                android:hint="最大数量"
                android:inputType="numberSigned"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_half_margin"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_size_16sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="@dimen/common_margin"
            android:background="@mipmap/bg_btn"
            android:text="搜索"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>