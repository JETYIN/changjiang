<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>


    <style name="ThemeActivity" parent="@style/AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="group_button">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="main_bottom" parent="group_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/main_footer_text_color_selector</item>
    </style>


    <style name="styleName" parent="android:Widget.TextView">

    </style>

    <style name="CheckBoxCho" parent="@android:style/Widget.Holo.CompoundButton.CheckBox">
        <item name="android:background">@null</item>
        <item name="android:button">@drawable/cho_selector</item>
        <item name="android:textColor">@color/pure_dark</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="login_edit_style">

        <item name="android:textSize">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@color/login_edit_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColorHint">@color/login_edit_color</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="WarehourseProductTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="WarehourseChoise">
        <item name="android:background">@mipmap/warehourse_input_list_input</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawableRight">@mipmap/warehourse_list_more</item>
    </style>

    <style name="WarehourseChoiseTitle">
        <item name="android:layout_marginLeft">26dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WarehourseChoiseContent" parent="WarehourseChoise">
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">28dp</item>
    </style>

</resources>
